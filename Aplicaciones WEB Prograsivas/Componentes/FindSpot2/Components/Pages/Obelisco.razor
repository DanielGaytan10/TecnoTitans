<!-- Línea divisoria -->
<hr class="my-4" />

<!-- Botones -->
<div class="text-center">
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" id="checkIn" />
        <label class="form-check-label" for="checkIn">Check-in</label>
    </div>
    <button class="btn btn-primary mx-2">Guardar</button>
</div>

<!-- Sección de opiniones -->
<div class="opinions-section text-center mt-5">
    <h5>Deja tu opinión</h5>
    <div class="input-group mb-3" style="max-width: 60%; margin: 0 auto;">
        <input type="text" class="form-control" placeholder="Dinos tu opinión..." @bind="newOpinion" />
        <button class="btn btn-success" @onclick="PublishOpinion">Publicar</button>
    </div>

    <div class="mt-4">
        @if (opinions.Count > 0)
        {
            @foreach (var opinion in opinions)
            {
                <div class="card mb-3" style="max-width: 60%; margin: 0 auto;">
                    <div class="card-body">
                        <p class="card-text">@opinion</p>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No hay opiniones todavía.</p>
        }
    </div>
</div>

@code {
    private string newOpinion = string.Empty; // Variable para la nueva opinión
    private List<string> opinions = new List<string>(); // Lista de opiniones

    // Función para publicar una nueva opinión
    private void PublishOpinion()
    {
        // Verifica si la opinión no está vacía
        if (!string.IsNullOrWhiteSpace(newOpinion))
        {
            // Añade la nueva opinión a la lista de opiniones
            opinions.Add(newOpinion);

            // Limpia el campo de texto después de publicar
            newOpinion = string.Empty;

            // Redibuja la interfaz para mostrar la nueva opinión
            StateHasChanged();
        }
        else
        {
            // Mensaje para verificar si la opinión está vacía
            Console.WriteLine("La opinión está vacía y no será añadida.");
        }
    }
}


<style>
    .carousel-img {
        height: 300px; /* Reducido para hacer el carrusel más pequeño */
        object-fit: cover; /* Ajuste para que las imágenes llenen el contenedor sin distorsionarse */
        object-position: center; /* Centra el contenido de las imágenes */
    }

    .carousel {
        max-width: 60%; /* Limita el ancho del carrusel en relación al tamaño de la página */
        margin: 0 auto; /* Centra el carrusel en la página */
    }
    /* Mapa de Google */
    .google-map {
        max-width: 60%; /* Ajusta el ancho del mapa */
        margin: 0 auto; /* Centra el mapa en la página */
    }

    iframe {
        width: 100%; /* El iframe ocupará el 100% del contenedor */
        height: 300px; /* Ajusta la altura del mapa */
    }

    /* Estilo para la información de contacto */
    .contact-info {
        margin: 20px 0;
    }

    .opinions-section {
        max-width: 60%;
        margin: 0 auto;
    }

    .card {
        margin-top: 10px;
    }
</style>

