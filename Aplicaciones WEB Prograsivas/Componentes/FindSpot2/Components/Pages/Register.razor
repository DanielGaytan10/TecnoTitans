@page "/Register"

<!-- Header -->
<header style="background-color: #059B9A;" text-white">
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <img src="/images/logo.png" alt="Logo" style="height: 60px; margin-right: 10px;">
                FindSpot
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/Login">Iniciar Sesión</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Register">Registrarse</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Contenedor del Formulario con color personalizado -->
            <div class="bg-primary text-white p-4" style="border-radius: 30px;">
                <!-- Imagen de Logo -->
                <div class="text-center mb-4">
                    <img src="images/logo.png" alt="Logo" class="img-fluid" style="max-height: 150px;" />
                </div>

                <h3 class="text-center">Registro</h3>

                <EditForm Model="@userModel" OnValidSubmit="HandleLogin" class="mt-3">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="mb-3">
                        <label for="username" class="form-label">Usuario:</label>
                        <InputText id="username" class="form-control" placeholder="Ingrese su usuario" style="opacity: 0.5; max-width: 500px;" @bind-Value="userModel.Username" />
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Contraseña:</label>
                        <InputText id="password" class="form-control" type="password" placeholder="Ingrese su contraseña" style="opacity: 0.5; max-width: 500px;" @bind-Value="userModel.Password" />
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-light">Registrarse</button>
                    </div>
                    <div class="text-center mt-3">
                        <p>¿Ya tienes cuenta? <a href="/Login" class="navbar-link" style="color: #000;">Iniciar Sesion</a></p>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>

@code {
    private UserModel userModel = new UserModel();

    private void HandleLogin()
    {
        // Aquí puedes implementar la lógica para manejar el inicio de sesión
        Console.WriteLine($"Usuario: {userModel.Username}, Contraseña: {userModel.Password}");
    }

    public class UserModel
    {
        public string Username { get; set; }
        public string Password { get; set; }
    }
}
